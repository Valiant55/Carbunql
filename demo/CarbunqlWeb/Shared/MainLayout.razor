@inherits LayoutComponentBase

<RadzenDialog/>
<RadzenNotification/>
<RadzenContextMenu/>
<RadzenTooltip/>

<RadzenLayout class="rz-shadow-3" >
    <NavMenu />
    <RadzenBody>
        <article class="content px-4">
            <ErrorBoundary @ref="_errorBoundary">
                <ChildContent>
                    @Body
                </ChildContent>
                <ErrorContent>
                    <p>Error : @context.Message</p>
                </ErrorContent>
            </ErrorBoundary>
        </article>
    </RadzenBody>
@*    <RadzenFooter>
        Footer
    </RadzenFooter>*@
</RadzenLayout>

@code {
    private ErrorBoundary? _errorBoundary;
}